{% extends 'layout.html.twig' %}

{% block title %}
Salle de combat
{% endblock %}


{% block content %}
<div class="row justify-content-md-center">
  <div class="col-6">
 <h1 class="title ">FIGHT ! au tour de {{ joueur }} d'attaquer</h1>
  </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="thumbnail text-center">
            <h3>{{Perso1.name}}</h3>
            <img src="{{Perso1.image}}" alt="Personnage 1" class="img-thumbnail">

            </div>
        </div>
        <div class="col-2 text-left">
          <p>
          Vie = {{ Perso1.vie }}<br>
          INT = {{ Perso1.intelligence }}<br>
          FOR = {{ Perso1.strength }}<br>
          SPEED = {{ Perso1.speed }}<br>
          DUR = {{ Perso1.durability }}<br>
          POWER = {{ Perso1.power }}<br>
          COMB = {{ Perso1.combat }}</p>
        </div>
        <div class="col-2 text-center" style="top:30vh;">
          <form class="" action="/attack1" method="POST">


          <button type="submit" class="btn btn-warning"> Lancez le tour !</button>
          <input type="hidden" name="informations" value="{{ text|join('\n')|nl2br }}"><br>
            <p> {{ text }}</p>
          </form>
          </div>
        <div class="col-2 text-right">
          <p>
          Vie = {{ Perso2.vie }}<br>
          INT = {{ Perso2.intelligence }}<br>
          FOR = {{ Perso2.strength }}<br>
          SPEED = {{ Perso2.speed }}<br>
          DUR = {{ Perso2.durability }}<br>
          POWER = {{ Perso2.power }}<br>
          COMB = {{ Perso2.combat }}</p>
        </div>
        <div class="col-3">
            <div class="thumbnail">
            <h3>{{Perso2.name}}</h3>
            <img src="{{Perso2.image}}" alt="Personnage 1" class="img-thumbnail">

            </div>
        </div>
    </div>

</div>

{% endblock %}
